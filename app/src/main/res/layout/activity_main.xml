<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_endevinar"
        android:layout_width="167dp"
        android:layout_height="65dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="238dp"
        android:text="@string/endevinar"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputnumber"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/inputnumber"
        android:layout_width="225dp"
        android:layout_height="77dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="327dp"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="24dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/enter_the_guess"
        android:inputType="number"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/button_endevinar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/ranking"
        android:layout_width="194dp"
        android:layout_height="97dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="187dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/inputnumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/intentos"
        android:layout_width="203dp"
        android:layout_height="97dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="45dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/inputnumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ranking"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>